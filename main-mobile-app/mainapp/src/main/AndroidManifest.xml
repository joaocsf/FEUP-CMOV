<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="feup.cmov.casadamusica.mainapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_bar"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_bar_round"
        android:name="feup.cmpv.feup.casadamusica.application.ApplicationContextRetriever"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/MyMaterialTheme"
        android:hardwareAccelerated="true">
        <activity
            android:name="feup.cmpv.feup.casadamusica.view.FirstActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.NoDisplay"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="feup.cmpv.feup.casadamusica.view.MainBody"
            android:screenOrientation="portrait"/>
        <activity android:name="feup.cmpv.feup.casadamusica.view.UserRegister"
            android:screenOrientation="portrait"/>
        <activity android:name="feup.cmpv.feup.casadamusica.view.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="feup.cmpv.feup.casadamusica.view.OrderActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="feup.cmpv.feup.casadamusica.view.TicketValidationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="feup.cmpv.feup.casadamusica.view.QRActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="feup.cmpv.feup.casadamusica.view.NFC.NFCSendActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>