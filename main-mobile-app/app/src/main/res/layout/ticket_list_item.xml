<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ticket_list_item_image"
        android:layout_width="90dp"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="2dip"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/ticket_list_item_title"
        android:layout_toRightOf="@id/show_list_item_image"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:textSize="20sp"
        android:maxLines="1"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/ticket_list_item_date"
        android:layout_toRightOf="@id/show_list_item_title"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:textAlignment="textEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ticket_list_item_number_of_tickets"
        android:layout_toRightOf="@id/show_list_item_image"
        android:textSize="20sp"
        android:textAlignment="textEnd"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>