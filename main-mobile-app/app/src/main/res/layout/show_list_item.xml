<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="310dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        card_view:cardCornerRadius="10dp"
        android:layout_height="300dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/show_list_item_image"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="2dip"
                android:src="@drawable/ic_launcher_background"/>

            <TextView
                android:id="@+id/show_list_item_title"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_alignBottom="@+id/show_list_item_image"
                android:layout_marginBottom="0dp"
                android:background="#A000"
                android:gravity="center"
                android:maxLines="1"
                android:text="Name of The Show"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textviewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/show_list_item_image"
                android:layout_alignParentStart="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="8dp"
                android:text="Date"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/show_list_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/show_list_item_image"
                android:layout_marginStart="8dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@id/textviewDate"
                android:text="2012/20/01"
                android:textAlignment="textEnd"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/show_list_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="12,00â‚¬"
                android:textAlignment="textEnd"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/atendees_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_group_black_24dp"
                android:tint="#555" />

            <TextView
                android:id="@+id/show_list_item_atendees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/atendees_icon"
                android:text="12"
                android:textAlignment="textStart"
                android:textSize="20sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>